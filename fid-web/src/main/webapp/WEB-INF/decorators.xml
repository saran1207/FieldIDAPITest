<decorators defaultdir="/templates/html/layout"> 

	<excludes>
		<pattern>*pushFile.action*</pattern>
		<pattern>*excel/*.action*</pattern>
		<pattern>*xml/*.action*</pattern>
		<pattern>*file/*.action*</pattern>
		
		<pattern>/admin/styles/*</pattern> 
        <pattern>/admin/scripts/*</pattern> 
        <pattern>/admin/images/*</pattern> 
        <pattern>/admin/templates/ajax_pieces/*</pattern>
        <pattern>/admin/ajax/*</pattern>
        <pattern>/admin/signIn.action</pattern>
	</excludes>

	<decorator name="embedded" page="/templates/html/layout/embeddedLayout.ftl">
		<pattern>/embedded/*.action*</pattern>
	</decorator>
	
	
	<decorator name="ajaxExternalLayout" page="/templates/ajax/layout/publicLayout.ftl">
		<pattern>*external/ajax/*</pattern>
	</decorator>
	
	<decorator name="ajaxLayout" page="/templates/ajax/layout/layout.ftl">
		<pattern>*ajax/*.action*</pattern>
	</decorator>
	<decorator name="publicAjaxLayout" page="/templates/ajax/layout/publicLayout.ftl">
		<pattern>*public/ajax/*.action*</pattern>
	</decorator>
	
	<decorator name="aHtmlLayout" page="/templates/aHtml/layout/layout.ftl">
		<pattern>*aHtml/*.action*</pattern>
	</decorator>
	
	<decorator name="aHtmlIframeLayout" page="/templates/aHtml/layout/htmlLayout.ftl">
		<pattern>*aHtml/iframe/*.action*</pattern>
		<pattern>*aHtml/fileUploads/*.action*</pattern>
	</decorator>
	
	<!-- FIXME: These patterns are too generic -->
	<decorator name="brandedLayout" page="brandedPublicLayout.ftl">
		<pattern>*eulaAcceptance*.action*</pattern>
		<pattern>*chooseCompany.action*</pattern>
    	<pattern>*signInToCompany.action*</pattern>
    	<pattern>*findCompany.action*</pattern>        	
        <pattern>*register*.action</pattern>
        <pattern>*forgotPassword*.action</pattern>
        <pattern>*sendPassword*.action</pattern>
        <pattern>*resetPassword*.action</pattern>
        <pattern>*login.action*</pattern>
        <pattern>*logIntoSystem.action*</pattern>
        <pattern>*finalizeReset*.action*</pattern>
    </decorator>
    
    <decorator name="adminLayout" page="/admin/templates/html/layout.ftl"> 
        <pattern>*admin/*.action</pattern>
    </decorator> 
    
	<decorator name="publicLayout" page="publicLayout.ftl">
		<pattern>*public/*.action*</pattern>
	</decorator>    
    
    <decorator name="layout" page="layout.ftl">     	
        <pattern>*.action</pattern>
    </decorator> 
</decorators> 
