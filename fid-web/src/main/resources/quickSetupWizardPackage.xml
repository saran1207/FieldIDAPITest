<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts><!-- Configuration for the default package. -->

	<package name="quickSetup" extends="default" namespace="/quickSetupWizard">
		
		<global-results>
			<result name="login" type="redirectAction">
				<param name="namespace">/</param>
				<param name="actionName">login</param>
			</result>
			
		</global-results>
		
	 	<action name="startWizard" method="show" class="com.n4systems.fieldid.actions.setupwizard.QuickSetupWizardAction">
			<result name="success" type="freemarker">/templates/html/quickSetupWizard/start.ftl</result>
		</action>
		<action name="allDone" method="completed" class="com.n4systems.fieldid.actions.setupwizard.QuickSetupWizardAction">
			<result name="success" type="freemarker">/templates/html/quickSetupWizard/step4.ftl</result>
		</action>
		<action name="step1" method="step1" class="com.n4systems.fieldid.actions.setupwizard.QuickSetupWizardAction">
			<result name="success" type="freemarker">/templates/html/quickSetupWizard/step1.ftl</result>
		</action>
		<action name="step1Complete" method="step1Complete" class="com.n4systems.fieldid.actions.setupwizard.QuickSetupWizardAction">
			<result name="input" type="freemarker">/templates/html/quickSetupWizard/step1.ftl</result>
			<result name="error" type="freemarker">/templates/html/quickSetupWizard/step1.ftl</result>
			<result name="success" type="redirectAction">step2</result>
		</action>
		<action name="step2" method="editQuickSetupWizard" class="com.n4systems.fieldid.actions.SystemSettingsCrud">
			<result name="success" type="freemarker">/templates/html/quickSetupWizard/step2.ftl</result>
		</action>
		<action name="step2Complete" method="updateDateAndBranding" class="com.n4systems.fieldid.actions.SystemSettingsCrud">
			<result name="input" type="freemarker">/templates/html/quickSetupWizard/step2.ftl</result>
			<result name="error" type="freemarker">/templates/html/quickSetupWizard/step2.ftl</result>
			<result name="success" type="redirectAction">
				<param name="actionName">step3</param>
				<param name="quickSetupWizardCatalogImport">true</param>
			</result>
		</action>
		<action name="step3" method="show" class="com.n4systems.fieldid.actions.safetyNetwork.PublishedCatalogCrud">
			<result name="missing" type="redirectAction">startWizard</result>
			<result name="success" type="freemarker">/templates/html/quickSetupWizard/step3.ftl</result>
		</action>
		<action name="step3ImportCatalogOnlyConfirm" method="confirm" class="com.n4systems.fieldid.actions.safetyNetwork.PublishedCatalogCrud">
			<result name="missing" type="redirectAction">startWizard</result>
			<result name="success" type="freemarker">/templates/html/quickSetupWizard/_loadingImports.ftl</result>
		</action>
		<action name="step3ImportCatalogOnlyImport" method="import" class="com.n4systems.fieldid.actions.safetyNetwork.PublishedCatalogCrud">
			<result name="missing" type="redirectAction">startWizard</result>
			<result name="success" type="redirectAction">allDone</result>
		</action>
		
	</package>
</struts>