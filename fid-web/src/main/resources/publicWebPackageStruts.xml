<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts><!-- Configuration for the default package. -->

	<package name="publicWeb" extends="default" namespace="/public">
		<default-interceptor-ref name="brandedFlashPublicStack" />
		<global-results>
			<result name="missing" type="freemarker">/templates/html/common/error.ftl</result>
			<result name="error" type="freemarker">/templates/html/common/error.ftl</result>
			<result name="invalid_security" type="freemarker">/templates/html/common/error.ftl</result>
		</global-results>
		
		<action name="publicDownload" method="publicDownload" class="com.n4systems.fieldid.actions.downloaders.DownloadLinkAction">
			<result name="error" type="freemarker">/templates/html/public/downloads/downloadExpired.ftl</result>
			<result name="input" type="freemarker">/templates/html/public/downloads/publicDownload.ftl</result>
			<result name="success" type="freemarker">/templates/html/public/downloads/publicDownload.ftl</result>
		</action>	
		
		<action name="downloadFile" method="downloadPublicFile" class="com.n4systems.fieldid.actions.downloaders.DownloadLinkAction">
			<result name="success" type="stream">
				<param name="contentType">${contentType}</param>
				<param name="inputName">fileStream</param>
				<param name="contentLength">${fileSize}</param>
				<param name="contentDisposition">inline; filename="${fileName}"</param>
			</result>
			<result name="error" type="redirectAction">publicDownloadExpired</result>
		</action>
		
		<action name="publicDownloadExpired" method="show" class="com.n4systems.fieldid.actions.downloaders.DownloadLinkAction">
			<result name="success" type="freemarker">/templates/html/public/downloads/downloadExpired.ftl</result>
		</action>
		
	</package>
	
	<package name="publicAjax" extends="default" namespace="/public/ajax">
		<default-interceptor-ref name="brandedFlashPublicStack" />
		
		<global-results>
			<result name="error" type="freemarker">/templates/ajax/ajax/error.ftl</result>
			<result name="missing" type="freemarker">/templates/ajax/ajax/error.ftl</result>
			<result name="input" type="freemarker">/templates/ajax/ajax/error.ftl</result>
		</global-results>
		
		<action name="getRegions" method="list" class="com.n4systems.fieldid.actions.user.RegionListAction">
			<result name="success" type="freemarker">/templates/ajax/userCrud/regions.ftl</result>
		</action>
	</package>
</struts>