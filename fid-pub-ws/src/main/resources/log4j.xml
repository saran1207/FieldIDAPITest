<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">
	<appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="com.n4systems.fieldid.log.FieldIDPatternLayout">
            <param name="ConversionPattern" value="%D: %-5p [%t] %C.%M(%F:%L): %m%n" />
		</layout>
	</appender>
    <appender name="API_LOG" class="org.apache.log4j.FileAppender">
        <param name="File" value="/var/fieldid/logs/pub-api.log" />
        <param name="Append" value="true" />
        <layout class="com.n4systems.fieldid.log.JSONEventLayoutV1">
            <param name="ConversionPattern" value="%D [%t] (%T:%U) %-5p %c - %m%n" />
        </layout>
    </appender>

    <logger name="com.n4systems">
        <level value="info"/>
    </logger>
    <logger name="net.sf.ehcache">
        <level value="warn"/>
    </logger>
    <logger name="com.amazonaws">
        <level value="warn"/>
    </logger>
    <logger name="org.hibernate">
        <level value="warn"/>
    </logger>
    <logger name="org.reflections">
        <level value="warn"/>
    </logger>
    <logger name="org.springframework">
        <level value="info"/>
    </logger>
    <logger name="org.glassfish">
        <level value="info"/>
    </logger>
    <logger name="org.apache">
        <level value="info"/>
    </logger>

    <root>
		<priority value="info" />
		<appender-ref ref="API_LOG" />
        <!--appender-ref ref="CONSOLE" /-->
	</root>
</log4j:configuration>
