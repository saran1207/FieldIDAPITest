<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts><!-- Configuration for the default package. -->

	<package name="publicWeb" extends="default" namespace="/public">
		<default-interceptor-ref name="brandedFlashPublicStack" />
		<global-results>
			<result name="missing" type="freemarker">/templates/html/common/error.ftl</result>
			<result name="error" type="freemarker">/templates/html/common/error.ftl</result>
			<result name="invalid_security" type="freemarker">/templates/html/common/error.ftl</result>
		</global-results>
		
		
		<action name="signUpPackages" method="list" class="com.n4systems.fieldid.actions.signup.SignUpPackageAction">
			<result name="success" type="freemarker">/templates/html/signUpPackages/list.ftl</result>
			<result name="error" type="freemarker">/templates/html/signUpPackages/list.ftl</result>
			<result name="input" type="freemarker">/templates/html/signUpPackages/list.ftl</result>
		</action>

		<action name="signUpAdd" method="add" class="com.n4systems.fieldid.actions.signup.SignUpCrud">
			<result name="missing" type="redirectAction">signUpPackages</result>
			<result name="success" type="freemarker">/templates/html/signUp/add.ftl</result>
			<result name="input" type="freemarker">/templates/html/signUp/add.ftl</result>
		</action>

		<action name="signUpCreate" method="create"	class="com.n4systems.fieldid.actions.signup.SignUpCrud">
			<result name="missing" type="redirectAction">signUpPackages</result>
			<result name="input" type="freemarker">/templates/html/signUp/add.ftl</result>
			<result name="error" type="freemarker">/templates/html/signUp/add.ftl</result>
			<result name="success" type="redirectAction">
				<param name="actionName">signUpComplete</param>
			</result>
		</action>
		
		<action name="signUpComplete" method="show" class="com.n4systems.fieldid.actions.signup.SignUpCrud">
			<result name="missing" type="redirectAction">signUpPackages</result>
			<result name="success" type="freemarker">/templates/html/signUp/show.ftl</result>
			<result name="input" type="freemarker">/templates/html/signUp/show.ftl</result>
		</action>
		
	</package>
	
	<package name="publicAjax" extends="default" namespace="/public/ajax">
		<default-interceptor-ref name="brandedFlashPublicStack" />
		
		<global-results>
			<result name="error" type="freemarker">/templates/ajax/ajax/error.ftl</result>
			<result name="missing" type="freemarker">/templates/ajax/ajax/error.ftl</result>
			<result name="input" type="freemarker">/templates/ajax/ajax/error.ftl</result>
		</global-results>
	
		<action name="signUpPackagePrice" method="show" class="com.n4systems.fieldid.actions.signup.SignUpPackagePriceCrud">
			<result name="success" type="freemarker">/templates/ajax/signUpPackagePrice/show.ftl</result>
		</action>
	</package>
</struts>