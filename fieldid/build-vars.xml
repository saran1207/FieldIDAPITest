<?xml version="1.0" encoding="UTF-8"?>
<project name="fieldid-vars" default="notarget">
	<description>FieldID Build Variables</description>

	<property environment="env" />
	
	<!-- <dirname property="build.home" file="asdasdasd../" /> -->

	<property name="source.level" value="1.6" />

	<property name="build.home" value="../" />
	<property name="fieldidEar.home" location="${build.home}/fieldid" />
	<property name="fieldidEjb.home" location="${build.home}/rfidEJB" />
	<property name="fieldidWeb.home" location="${build.home}/rfidWeb" />
	<property name="fieldidAdmin.home" location="${build.home}/fieldidadminWeb" />
	<property name="testUtils.home" location="${build.home}/TestUtils" />
	<property name="certifcateData.home" location="${build.home}/certificateData"/>

	<property name="fieldidEar" value="fieldid.ear" />
	<property name="fieldidEjb" value="rfidEJB.jar" />
	<property name="fieldidWeb" value="rfidWeb.war" />
	<property name="fieldidAdmin" value="fieldidadminWeb.war" />
	<property name="certificateData" value="certificateData.jar" />
	<property name="testUtils" value="testUtils.jar" />

	<property name="src" location="src" />
	<property name="test" location="test" />
	<property name="build" location="build" />
	<property name="build.test" location="tests" />
	<property name="dist" location="dist" />
	
	

	<property name="ear_home" location="../fieldid" />
	<property name="ear_home.ear_content" location="${ear_home}/EarContent" />
	<property name="app-inf" location="${ear_home.ear_content}/APP-INF" />
	<property name="ear_home.lib_path" value="APP-INF/lib" />
	<property name="ear_home.test_lib_path" value="test_libs" />
	<property name="ear_home.lib" location="${ear_home.ear_content}/${ear_home.lib_path}" />
	<property name="ear_home.test_lib" location="${ear_home}/${ear_home.test_lib_path}" />
	
	<property name="testUtils_lib" location="${testUtils.home}/dist"/>

	<property name="jboss_home" value="${env.JBOSS_HOME}" />
	<property name="jboss_home.client" value="${jboss_home}/client" />
	<property name="jboss_home.lib" value="${jboss_home}/lib" />
	<property name="jboss_home.server" value="${jboss_home}/server/default/lib" />

	<property name="webroot" location="WebContent" />
	<property name="web-inf" location="${webroot}/WEB-INF" />
	<property name="web-inf.lib" location="${web-inf}/lib" />

	<target name="notarget" />

</project>
